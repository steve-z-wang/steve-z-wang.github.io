---
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "sw.log" } = Astro.props;
const base = import.meta.env.BASE_URL;
const pathname = new URL(Astro.request.url).pathname;
// Normalize paths for comparison
const normalizedPath = pathname.replace(base, '').replace(/\/$/, '');

const navItems = [
  { name: 'posts', href: '' },
  { name: 'tags', href: 'tags' },
  { name: 'about', href: 'about' },
];

const anim = {
  old: {
    name: 'blur-out',
    duration: '0.3s',
    easing: 'ease-out',
    fillMode: 'forwards',
  },
  new: {
    name: 'blur-in',
    duration: '0.3s',
    easing: 'ease-in',
    fillMode: 'backwards',
  }
};

const blur = {
  forwards: anim,
  backwards: anim,
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500&display=swap" rel="stylesheet" />
    <title>{title}</title>
    <ViewTransitions />
    <script is:inline>
      const setTheme = () => {
        const theme = localStorage.getItem('theme') ||
          (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
        document.documentElement.classList.toggle('dark', theme === 'dark');
      };
      setTheme();
      document.addEventListener('astro:after-swap', setTheme);
    </script>
  </head>
  <body class="bg-white dark:bg-neutral-900 text-gray-900 dark:text-gray-100 min-h-screen flex flex-col">
    <nav class="">
      <div class="max-w-2xl mx-auto px-4 py-4 flex items-center justify-between text-base">
        <div class="flex items-center gap-3 lowercase">
          {navItems.map((item, index) => {
            const isActive = normalizedPath === item.href || 
                            (item.href === '' && (normalizedPath === '' || normalizedPath.startsWith('posts'))) ||
                            (item.href === 'tags' && normalizedPath.startsWith('tags'));
            return (
              <>
                <a
                  href={`${base}${item.href}`}
                  class={isActive 
                    ? "text-gray-900 dark:text-gray-100" 
                    : "text-gray-400 dark:text-gray-500 hover:text-gray-600 dark:hover:text-gray-300 transition-colors"}
                >
                  {item.name}
                </a>
                {index < navItems.length - 1 && <span class="text-gray-300 dark:text-gray-600">&middot;</span>}
              </>
            );
          })}
        </div>
        <button id="theme-toggle" class="text-gray-400 dark:text-gray-500 hover:text-gray-600 dark:hover:text-gray-300 transition-colors lowercase">
          <span id="theme-text">light</span>
        </button>
      </div>
    </nav>

    <main class="flex-1 max-w-2xl mx-auto px-4 py-8 w-full" transition:animate={blur}>
      <slot />
    </main>

    <footer class="">
      <div class="max-w-2xl mx-auto px-4 py-6 text-center text-gray-500 dark:text-gray-400 text-sm">
        &copy; {new Date().getFullYear()} Steve Wang
      </div>
    </footer>

    <script is:inline>
      const updateThemeText = () => {
        const text = document.getElementById('theme-text');
        if (text) {
          text.textContent = document.documentElement.classList.contains('dark') ? 'dark' : 'light';
        }
      };

      const attachThemeToggle = () => {
        const toggle = document.getElementById('theme-toggle');
        if (toggle) {
          toggle.onclick = () => {
            const isDark = document.documentElement.classList.toggle('dark');
            localStorage.setItem('theme', isDark ? 'dark' : 'light');
            updateThemeText();
          };
        }
        updateThemeText();
      };
      
      attachThemeToggle();
      document.addEventListener('astro:after-swap', attachThemeToggle);
    </script>
  </body>
</html>
