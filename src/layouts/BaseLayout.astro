---
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "sw.log" } = Astro.props;
const base = import.meta.env.BASE_URL;
const pathname = new URL(Astro.request.url).pathname;
// Normalize paths for comparison
const normalizedPath = pathname.replace(base, '').replace(/\/$/, '');

const navItems = [
  { name: 'posts', href: '' },
  { name: 'tags', href: 'tags' },
  { name: 'about', href: 'about' },
];

const anim = {
  old: {
    name: 'blur-out',
    duration: '0.3s',
    easing: 'ease-out',
    fillMode: 'forwards',
  },
  new: {
    name: 'blur-in',
    duration: '0.3s',
    easing: 'ease-in',
    fillMode: 'backwards',
  }
};

const blur = {
  forwards: anim,
  backwards: anim,
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <ViewTransitions />
    <script is:inline>
      const setTheme = () => {
        const theme = localStorage.getItem('theme') ||
          (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
        document.documentElement.classList.toggle('dark', theme === 'dark');
      };
      setTheme();
      document.addEventListener('astro:after-swap', setTheme);
    </script>
  </head>
  <body class="bg-white dark:bg-neutral-900 text-gray-900 dark:text-gray-100 min-h-screen flex flex-col">
    <nav class="">
      <div class="max-w-xl mx-auto px-4 py-4 flex items-center justify-between text-base">
        <div class="flex items-center gap-6 lowercase font-mono" id="nav-links">
          {navItems.map((item) => {
            const isActive = normalizedPath === item.href || 
                            (item.href === '' && (normalizedPath === '' || normalizedPath.startsWith('posts'))) ||
                            (item.href === 'tags' && normalizedPath.startsWith('tags'));
            return (
              <a
                href={`${base}${item.href}`}
                class={isActive 
                  ? "text-gray-900 dark:text-gray-100" 
                  : "text-gray-400 dark:text-gray-500 hover:text-gray-900 dark:hover:text-gray-100 transition-colors"}
              >
                {item.name}
              </a>
            );
          })}
        </div>
        <button id="theme-toggle" class="text-gray-400 dark:text-gray-500 hover:text-gray-900 dark:hover:text-gray-100 transition-colors lowercase font-mono">
          <span id="theme-text">light</span>
        </button>
      </div>
    </nav>

    <main class="flex-1 max-w-xl mx-auto px-4 py-8 w-full" transition:animate={blur}>
      <slot />
    </main>

    <script is:inline>
      const updateThemeText = () => {
        const text = document.getElementById('theme-text');
        if (text) {
          // Show the theme that we WILL switch to
          text.textContent = document.documentElement.classList.contains('dark') ? 'light' : 'dark';
        }
      };

      const attachThemeToggle = () => {
        const toggle = document.getElementById('theme-toggle');
        if (toggle) {
          toggle.onclick = () => {
            const isDark = document.documentElement.classList.toggle('dark');
            localStorage.setItem('theme', isDark ? 'dark' : 'light');
            updateThemeText();
          };
        }
        updateThemeText();
      };
      
      const attachNavHighlight = () => {
        const nav = document.getElementById('nav-links');
        if (!nav) return;
        
        const links = nav.querySelectorAll('a');
        
        links.forEach(link => {
          link.addEventListener('click', () => {
            // Optimistic UI update: immediately set this link as active
            links.forEach(l => {
              l.classList.remove('text-gray-900', 'dark:text-gray-100');
              l.classList.add('text-gray-400', 'dark:text-gray-500', 'hover:text-gray-900', 'dark:hover:text-gray-100', 'transition-colors');
            });
            
            // Set active styles for the clicked link
            link.classList.remove('text-gray-400', 'dark:text-gray-500', 'hover:text-gray-900', 'dark:hover:text-gray-100', 'transition-colors');
            link.classList.add('text-gray-900', 'dark:text-gray-100');
          });
        });
      };

      attachThemeToggle();
      attachNavHighlight();
      document.addEventListener('astro:after-swap', () => {
        attachThemeToggle();
        attachNavHighlight();
      });
    </script>
  </body>
</html>
