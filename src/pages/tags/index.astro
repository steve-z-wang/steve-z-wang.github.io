---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import '../../styles/global.css';

const posts = await getCollection('posts', ({ data }) => !data.draft);

// Count posts per tag
const tagCounts = new Map<string, number>();
posts.forEach((post) => {
  post.data.tags.forEach((tag) => {
    tagCounts.set(tag, (tagCounts.get(tag) || 0) + 1);
  });
});

// Sort tags by occurrence (descending), then alphabetically
const sortedTags = [...tagCounts.entries()].sort((a, b) => b[1] - a[1] || a[0].localeCompare(b[0]));
const base = import.meta.env.BASE_URL;
---

<BaseLayout title="tags â€” sw.log">
  <div class="space-y-6">
    {
      sortedTags.map(([tag, count]) => (
        <a
          href={`${base}tags/${tag}`}
          class="flex items-baseline gap-3 group"
        >
          <span class="text-xl font-semibold group-hover:text-gray-900 dark:group-hover:text-gray-100 transition-colors lowercase">
            #{tag}
          </span>
          <span class="text-gray-400 dark:text-gray-500">
            {count}
          </span>
        </a>
      ))
    }
  </div>
</BaseLayout>
