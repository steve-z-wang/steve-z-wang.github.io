---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import '../../styles/global.css';

const posts = await getCollection('posts', ({ data }) => !data.draft);

// Count posts per tag
const tagCounts = new Map<string, number>();
posts.forEach((post) => {
  post.data.tags.forEach((tag) => {
    tagCounts.set(tag, (tagCounts.get(tag) || 0) + 1);
  });
});

// Sort tags by occurrence (descending), then alphabetically
const sortedTags = [...tagCounts.entries()].sort((a, b) => b[1] - a[1] || a[0].localeCompare(b[0]));
const base = import.meta.env.BASE_URL;
---

<BaseLayout title="Tags - sw.log">
  <div class="flex flex-wrap gap-3">
    {
      sortedTags.map(([tag, count]) => (
        <a
          href={`${base}tags/${tag}`}
          class="px-3 py-1 bg-neutral-100 dark:bg-neutral-800 hover:bg-neutral-200 dark:hover:bg-neutral-700 rounded-full text-neutral-700 dark:text-neutral-300"
        >
          #{tag} <span class="text-neutral-500 dark:text-neutral-400">{count}</span>
        </a>
      ))
    }
  </div>
</BaseLayout>
