---
import BaseLayout from "../layouts/BaseLayout.astro";
import "../styles/global.css";
const base = import.meta.env.BASE_URL;
---

<BaseLayout title="about — sw.log">
  <div class="prose prose-gray max-w-none lowercase">
    <p>hi, i'm steve — a solo developer based in seattle.</p>

    <p>
      i love to build, but i also care deeply about humanity. i am interested in
      how technology and people interact, drawing ideas from philosophy,
      society, biology, and code.
    </p>
  </div>

  <div class="flex gap-4 mt-8 text-gray-400 dark:text-gray-500 lowercase">
    <a
      href="https://github.com/steve-z-wang"
      target="_blank"
      rel="noopener noreferrer"
      class="hover:text-gray-900 dark:hover:text-gray-100 transition-colors"
    >
      github
    </a>
    <span>&middot;</span>
    <a
      href="https://www.linkedin.com/in/stevewang2000/"
      target="_blank"
      rel="noopener noreferrer"
      class="hover:text-gray-900 dark:hover:text-gray-100 transition-colors"
    >
      linkedin
    </a>
    <span>&middot;</span>
    <a
      href="mailto:stevewang.at.work@gmail.com"
      class="hover:text-gray-900 dark:hover:text-gray-100 transition-colors"
    >
      email
    </a>
    <span>&middot;</span>
    <a
      href={`${base}rss.xml`}
      target="_blank"
      rel="noopener noreferrer"
      class="hover:text-gray-900 dark:hover:text-gray-100 transition-colors"
    >
      rss
    </a>
  </div>
</BaseLayout>
</BaseLayout>
